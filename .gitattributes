# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Environment files
.env* text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# Documentation
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf

# Don't modify binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.ttf binary
*.woff binary
*.woff2 binary 