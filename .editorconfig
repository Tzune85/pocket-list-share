# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON files
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 4

# CSS, SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true 